.recommend-public {
  background-color: #fff;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.recommend-public .fill-photo {
  width: 100%;
  height: 460rpx;
}
.recommend-public .fill-photo .image {
  width: 100%;
  height: 100%;
}
.recommend-public .main {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  margin-top: 8rpx;
}
.recommend-public .main .list-item {
  width: 360rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.recommend-public .main .list-item.left {
  text-align: left;
}
.recommend-public .main .list-item.left .text-des {
  padding-left: 20rpx;
  box-sizing: border-box;
}
.recommend-public .main .list-item .image {
  width: 100%;
  height: 292rpx;
}
.recommend-public .main .list-item .text-des .name {
  font-size: 30rpx;
}
.recommend-public .main .list-item .text-des .des {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.54);
}
.recommend-public .main .list-item .text-des .price .now-price {
  color: #ea625b;
  font-size: 30rpx;
  margin-right: 10rpx;
}
.recommend-public .main .list-item .text-des .price .old-price {
  text-decoration: line-through;
  color: rgba(0, 0, 0, 0.54);
}
.recommend-public .main .list-item .text-des .buy-btn {
  background-color: #ea625b;
  color: #fff;
}
.recommend-public .more {
  text-align: center;
  color: rgba(0, 0, 0, 0.6);
  font-size: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.recommend-public .more.show-border {
  border-top: 1px solid #ddd;
}

